<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeppe.weatherapp.CityDetailsActivity"
    tools:layout_editor_absoluteY="73dp">

    <ImageView
        android:id="@+id/imgWeatherIcon"
        android:layout_width="145dp"
        android:layout_height="116dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtCityName"
        android:layout_width="142dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/imgWeatherIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHumidity"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgWeatherIcon" />

    <TextView
        android:id="@+id/txtTemperature"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/txtDegree"
        app:layout_constraintTop_toBottomOf="@+id/txtWeatherDescription" />

    <TextView
        android:id="@+id/txtHumidityPercent"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:text="@string/cityDetailsActivity_txtPercentage"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txtHumidity"
        app:layout_constraintTop_toBottomOf="@+id/imgWeatherIcon" />

    <TextView
        android:id="@+id/txtDegree"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/cityDetailsActivity_txtDegree"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWeatherDescription" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/cityDetailsActivity_txtDescription"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgWeatherIcon"
        app:layout_constraintTop_toBottomOf="@+id/txtCityName" />

    <TextView
        android:id="@+id/txtWeatherDescription"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="24dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgWeatherIcon"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:text="@string/cityDetailsActivity_btnRemove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/cityDetailsActivity_btnOk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
